<footer class="bg-dark text-white pt-5 pb-4">
  <div class="container text-md-start text-center">
    <div class="row d-flex justify-content-between">
      <!-- Brand Column -->
      <section class="col-md-6 mb-4" aria-label="About this website">
        <p class="h5 text-uppercase fw-bold">{{ site.title }}</p>
        <p>{{ site.description }}</p>
      </section>

      <!-- Links Column -->
      <nav class="col-md-auto mb-4" aria-label="Quick Links">
        <p class="h5 text-uppercase fw-bold">Quick Links</p>
        <ul class="list-unstyled">
          {% assign sorted_pages = site.pages | sort: 'nav-order' %}
          {% for this_page in sorted_pages %}
            <li>
              <a href="{{ this_page.url | absolute_url }}" class="text-white text-decoration-none">{{ this_page.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <!-- Social Column -->
      <nav aria-label="Social Media" class="col-md-auto mb-4">
        <p class="h5 text-uppercase fw-bold">Follow Me</p>
        <div class="d-flex gap-3 mt-2 justify-content-center justify-content-md-start">
          {% for social in site.data.socials %}
            <a href="{{ social.url }}" class="text-white fs-4">
              <i class="{{ social.icon }}" title="{{ social.name }}"></i>
            </a>
          {% endfor %}
        </div>
      </nav>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="text-center mt-4 border-top pt-3" aria-label="Copyright Declaration">
    <p class="mb-0">&copy; 2025 {{ site.author }}. All rights reserved.</p>
  </div>
</footer>