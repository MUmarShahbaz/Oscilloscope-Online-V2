<section aria-label="Tech Stack" class="py-5">
  <h1 class="display-1 text-center fw-bold my-5">Tech Stack</h1>
  <div class="container">
    <div class="row g-4">

      <div aria-label="Third Party Libraries" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="Bootstrap" class="devicon-bootstrap-plain" color="#7952B3" %}
            {% include icon.liquid name="uPlot" class="fas fa-chart-line" color="#FF6B6B" %}
            {% include icon.liquid name="html2canvas" class="fas fa-camera" color="#FFA726" %}
            <h5 class="card-title">Third Party</h5>
            <p class="muted">Bootstrap, uPlot & html2canvas</p>
          </div>
        </div>
      </div>

      <div aria-label="Scripts" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="TypeScript" class="devicon-typescript-plain" color="#3178C6" %}
            {% include icon.liquid name="NodeJS" class="fab fa-node-js" color="#3C873A" %}
            <h5 class="card-title">Scripts</h5>
            <p class="muted">TypeScript & NodeJS</p>
          </div>
        </div>
      </div>

      <div aria-label="Website" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="Jekyll" class="devicon-jekyll-plain" color="#CC0000" %}
            <h5 class="card-title">Website</h5>
            <p class="muted">Jekyll</p>
          </div>
        </div>
      </div>

      <div aria-label="Publishing" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="Docker" class="devicon-docker-plain" color="#1D63ED" %}
            {% include icon.liquid name="GitHub Actions" class="devicon-githubactions-plain" color="#2088FF" %}
            <h5 class="card-title">Publishing</h5>
            <p class="muted">Docker & GH Actions</p>
          </div>
        </div>
      </div>

      <div aria-label="Iconography" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="Font Awesome" class="fas fa-font" color="#339AF0" %}
            {% include icon.liquid name="Dev Icons" class="devicon-devicon-plain" color="#51CF66" %}
            <h5 class="card-title">Iconography</h5>
            <p class="muted">Font Awesome & Devicons</p>
          </div>
        </div>
      </div>

      <div aria-label="SVG" class="col-md-4 col-lg-3" data-aos="fade-up">
        <div class="card h-100 border-0 shadow">
          <div class="card-body text-center p-4">
            {% include icon.liquid name="Docker" class="fas fa-code" color="#1D63ED" %}
            <h5 class="card-title">SVG Export</h5>
            <p class="muted">SVG Plotter Library</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>